    <script type="text/javascript">
        let userinfo;
        function displayData() {
            document.getElementById('fname').value=userinfo.user.first_name;
            document.getElementById('uname').innerHTML=userinfo.user.first_name;
            document.getElementById('uname').style="font-weight:600";
            document.getElementById('mname').value=userinfo.user.middle_name;
            document.getElementById('lname').value=userinfo.user.last_name;
            document.getElementById('role').value=userinfo.user.role;
            document.getElementById('email').value=userinfo.user.email;
            document.getElementById('gender').value=userinfo.user.gender;
        }
        function signIn() {
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/accountInfo');
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhr.onload = function() {
                userinfo=JSON.parse(xhr.responseText);
                displayData();
            };
            
            xhr.send("pid=" + document.getElementById('id').value);
        }
        window.onload = signIn;
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        /* Set the width of the sidebar to 0 and the left margin of the page content to 0 */
        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
        function editForm(){
            document.getElementById('mname').removeAttribute('readonly');
            document.getElementById('lname').removeAttribute('readonly');
            document.getElementById('gender').removeAttribute('readonly');
        }
        function saveForm(){
            alert("Details Updated!");
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/save');
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            let middle_name="";
            if(document.getElementById('mname').value){
                middle_name=document.getElementById('mname').value.trim();
            }
            xhr.onload = function() {
                userinfo=JSON.parse(xhr.responseText);
                console.log(userinfo.info);
                console.log("parsing done!");
            };
            xhr.send("id="+document.getElementById('id').value.trim()+"&mname="+middle_name+"&lname="+document.getElementById('lname').value.trim()+"&gender="+document.getElementById('gender').value.trim());
            document.getElementById('mname').setAttribute('readonly',true);
            document.getElementById('lname').setAttribute('readonly',true);
            document.getElementById('gender').setAttribute('readonly',true);
        }
    </script>
